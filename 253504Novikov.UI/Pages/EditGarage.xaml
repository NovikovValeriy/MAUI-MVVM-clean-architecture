<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:_253504Novikov.UI.ViewModels"
             xmlns:converters="clr-namespace:_253504Novikov.UI.ValueConverters"
             xmlns:entities="clr-namespace:_253504Novikov.Domain.Entities;assembly=253504Novikov.Domain"
             x:DataType="models:EditGarageViewModel"
             x:Class="_253504Novikov.UI.Pages.EditGarage"
             Title="EditGarage">
    <VerticalStackLayout Margin="10">
        <Label Text="Name"/>
        <Entry Placeholder="Name" Keyboard="Text" Text="{Binding Name}"/>
        <Label Margin="0,10,0,0" Text="Area"/>
        <Entry Placeholder="Area" Keyboard="Numeric" Text="{Binding Area}"/>
        <Button Text="Save" Command="{Binding 
                                    Source={RelativeSource 
                                AncestorType={x:Type models:EditGarageViewModel}}, 
                                Path=SaveGarageCommand}"/>
    </VerticalStackLayout>
</ContentPage>